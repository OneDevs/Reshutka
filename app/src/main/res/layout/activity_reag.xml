<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"  tools:context="com.onedev.reshutka.ReagActivity"
    android:background="#1e272c">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/reg_baground_section"
        android:visibility="invisible"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerVertical="true">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#59674e">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Код подтверждения"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/captcha"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/captcha"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/captcha_hint"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:paddingLeft="70dp"
            android:paddingRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить"
            android:id="@+id/bt_send_captcha"
            android:background="@drawable/button"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:baselineAligned="false"
        android:layout_marginRight="20dp"
            android:background="@drawable/reg_baground_section"
        android:visibility="visible"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="true">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#59674e">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="Информация для входа"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/email"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:hint="@string/email_hint"
                android:paddingLeft="70dp"
                android:paddingRight="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/password"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="14dp"
                android:hint="@string/password_hint"
                android:password="true"
                android:paddingLeft="70dp"
                android:paddingRight="20dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Отправить"
                android:id="@+id/bt_send_reg"
                android:background="@drawable/button"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffffff" />
        </LinearLayout>


</RelativeLayout>
